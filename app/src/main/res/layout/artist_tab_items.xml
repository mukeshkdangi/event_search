                    android:adjustViewBounds="true"

                    android:scaleType="centerInside"
                    android:src="@drawable/img" />
            </TableRow>

            <TableRow
                android:id="@+id/image_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_1_3"
